#!/usr/bin/env sh

set -e

echo "########################################"
echo "→ Running gitleaks secret scan..."
echo "########################################"
pnpm secret:scan

echo "########################################"
echo "→ Running lints..."
echo "########################################"
pnpm lint

echo "########################################"
echo "→ Running typechecks..."
echo "########################################"
pnpm typecheck

echo "########################################"
echo "→ Running unit tests..."
echo "########################################"
pnpm test:unit
