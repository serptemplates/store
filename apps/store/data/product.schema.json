{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://serp.app/schemas/lander-template-product.json",
  "title": "Lander Template Product",
  "description": "Content contract for SERP Apps downloader landing pages.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "slug",
    "seo_title",
    "seo_description",
    "product_page_url",
    "purchase_url",
    "name",
    "tagline",
    "description"
  ],
  "properties": {
    "slug": {
      "type": "string",
      "minLength": 1
    },
    "platform": {
      "type": "string",
      "minLength": 1
    },
    "seo_title": {
      "type": "string",
      "minLength": 1
    },
    "seo_description": {
      "type": "string",
      "minLength": 1
    },
    "product_page_url": {
      "type": "string",
      "format": "uri"
    },
    "purchase_url": {
      "type": "string",
      "format": "uri"
    },
    "buy_button_destination": {
      "type": "string",
      "format": "uri"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "tagline": {
      "type": "string",
      "minLength": 1
    },
    "featured_image": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "featured_image_gif": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "github_repo_url": {
      "type": "string",
      "format": "uri"
    },
    "chrome_webstore_link": {
      "type": "string",
      "format": "uri",
      "minLength": 1
    },
    "firefox_addon_store_link": {
      "anyOf": [
        {
          "type": "string",
          "format": "uri",
          "minLength": 1
        },
        {
          "type": "null"
        }
      ]
    },
    "github_repo_tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": []
    },
    "features": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": []
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "product_videos": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "default": []
    },
    "related_videos": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "default": []
    },
    "screenshots": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "url"
        ],
        "properties": {
          "url": {
            "type": "string",
            "minLength": 1
          },
          "alt": {
            "type": "string"
          },
          "caption": {
            "type": "string"
          }
        }
      },
      "default": []
    },
    "reviews": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "review",
          "rating"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "review": {
            "type": "string",
            "minLength": 1
          },
          "rating": {
            "type": "number",
            "minimum": 0,
            "maximum": 5
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "verified": {
            "type": "boolean"
          },
          "role": {
            "type": "string"
          }
        }
      },
      "default": []
    },
    "faqs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "question",
          "answer"
        ],
        "properties": {
          "question": {
            "type": "string",
            "minLength": 1
          },
          "answer": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "default": []
    },
    "supported_operating_systems": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": []
    },
    "supported_regions": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": []
    },
    "status": {
      "type": "string",
      "minLength": 1
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": []
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": []
    },
    "layout_type": {
      "type": "string",
      "enum": [
        "landing",
        "ecommerce"
      ],
      "default": "landing"
    },
    "pre_release": {
      "type": "boolean",
      "default": false
    },
    "expected_launch_date": {
      "type": "string",
      "format": "date"
    },
    "waitlist_url": {
      "type": "string",
      "format": "uri"
    },
    "new_release": {
      "type": "boolean",
      "default": false
    },
    "brand": {
      "type": "string",
      "default": "SERP Apps"
    },
    "sku": {
      "type": "string"
    },
    "pricing": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "label": {
          "type": "string"
        },
        "price": {
          "type": "string"
        },
        "original_price": {
          "type": "string"
        },
        "currency": {
          "type": "string",
          "minLength": 3,
          "maxLength": 3
        },
        "availability": {
          "type": "string",
          "minLength": 1
        },
        "price_valid_until": {
          "type": "string",
          "format": "date"
        },
        "note": {
          "type": "string"
        },
        "cta_text": {
          "type": "string"
        },
        "cta_href": {
          "type": "string",
          "format": "uri"
        },
        "benefits": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        }
      }
    },
    "return_policy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "days": {
          "type": "integer",
          "minimum": 0
        },
        "fees": {
          "type": "string"
        },
        "method": {
          "type": "string"
        },
        "policy_category": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "license": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "entitlements": {
          "anyOf": [
            {
              "type": "string",
              "minLength": 1
            },
            {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              },
              "minItems": 1
            }
          ]
        }
      }
    },
    "stripe": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "price_id",
        "success_url",
        "cancel_url"
      ],
      "properties": {
        "price_id": {
          "type": "string",
          "minLength": 1
        },
        "success_url": {
          "type": "string",
          "format": "uri"
        },
        "cancel_url": {
          "type": "string",
          "format": "uri"
        },
        "mode": {
          "type": "string",
          "enum": [
            "payment",
            "subscription"
          ]
        },
        "metadata": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {}
        }
      }
    },
    "ghl": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "pipeline_id": {
          "type": "string",
          "minLength": 1
        },
        "stage_id": {
          "type": "string",
          "minLength": 1
        },
        "status": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "tag_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "contact_custom_field_ids": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "opportunity_custom_field_ids": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    }
  }
}
