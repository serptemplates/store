{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://apps.serp.co/schemas/lander-template-product.json",
  "title": "Lander Template Product",
  "description": "Content contract for SERP Apps downloader landing pages.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "slug",
    "seo_title",
    "seo_description",
    "store_serp_co_product_page_url",
    "apps_serp_co_product_page_url",
    "serply_link",
    "success_url",
    "cancel_url",
    "name",
    "tagline",
    "description"
  ],
  "properties": {
    "slug": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z0-9-]+$"
    },
    "platform": {
      "type": "string",
      "minLength": 1
    },
    "seo_title": {
      "type": "string",
      "minLength": 1
    },
    "seo_description": {
      "type": "string",
      "minLength": 1
    },
    "store_serp_co_product_page_url": {
      "type": "string",
      "format": "uri",
      "pattern": "^https://store\\.serp\\.co/"
    },
    "apps_serp_co_product_page_url": {
      "type": "string",
      "format": "uri",
      "pattern": "^https://apps\\.serp\\.co/"
    },
    "serp_co_product_page_url": {
      "type": "string",
      "format": "uri",
      "pattern": "^https://(www\\.)?serp\\.co/"
    },
    "reddit_url": {
      "anyOf": [
        {
          "type": "string",
          "format": "uri",
          "pattern": "^(https://((www|old|new)\\.)?reddit\\.com/|https://redd\\.it/)"
        },
        {
          "type": "null"
        }
      ]
    },
    "serply_link": {
      "type": "string",
      "format": "uri",
      "pattern": "^https://serp\\.ly/"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "tagline": {
      "type": "string",
      "minLength": 1
    },
    "featured_image": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "featured_image_gif": {
      "type": [
        "string",
        "null"
      ],
      "minLength": 1
    },
    "github_repo_url": {
      "anyOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "null"
        }
      ]
    },
    "chrome_webstore_link": {
      "anyOf": [
        {
          "type": "string",
          "format": "uri",
          "pattern": "^https://(chromewebstore\\.google\\.com|chrome\\.google\\.com)/"
        },
        {
          "type": "null"
        }
      ]
    },
    "firefox_addon_store_link": {
      "anyOf": [
        {
          "type": "string",
          "format": "uri",
          "pattern": "^https://addons\\.mozilla\\.org/"
        },
        {
          "type": "null"
        }
      ]
    },
    "edge_addons_store_link": {
      "anyOf": [
        {
          "type": "string",
          "format": "uri",
          "pattern": "^https://microsoftedge\\.microsoft\\.com/"
        },
        {
          "type": "null"
        }
      ]
    },
    "opera_addons_store_link": {
      "anyOf": [
        {
          "type": "string",
          "format": "uri",
          "pattern": "^https://addons\\.opera\\.com/"
        },
        {
          "type": "null"
        }
      ]
    },
    "producthunt_link": {
      "anyOf": [
        {
          "type": "string",
          "format": "uri",
          "pattern": "^https://(www\\.)?producthunt\\.com/"
        },
        {
          "type": "null"
        }
      ]
    },
    "github_repo_tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": []
    },
    "features": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": []
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "product_videos": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "default": []
    },
    "related_videos": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "default": []
    },
    "related_posts": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": []
    },
    "screenshots": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "url"
        ],
        "properties": {
          "url": {
            "type": "string",
            "minLength": 1,
            "pattern": "^(https?://|/)"
          },
          "alt": {
            "type": "string"
          },
          "caption": {
            "type": "string"
          }
        }
      },
      "default": []
    },
    "reviews": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "review",
          "rating"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "review": {
            "type": "string",
            "minLength": 1
          },
          "rating": {
            "type": "number",
            "minimum": 0,
            "maximum": 5
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "verified": {
            "type": "boolean"
          },
          "role": {
            "type": "string"
          }
        }
      },
      "default": []
    },
    "faqs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "question",
          "answer"
        ],
        "properties": {
          "question": {
            "type": "string",
            "minLength": 1
          },
          "answer": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "default": []
    },
    "supported_operating_systems": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": []
    },
    "supported_regions": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": []
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "pre_release",
        "live"
      ],
      "default": "draft"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "Downloader",
          "Artificial Intelligence",
          "Adult",
          "Course Platforms",
          "Livestream",
          "Creative Assets",
          "Image Hosting",
          "Movies & TV",
          "Social Media",
          "Video Downloader",
          "Image Downloader",
          "Audio Downloader",
          "Music",
          "File Storage",
          "Productivity",
          "Utilities"
        ]
      },
      "default": []
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": []
    },
    "layout_type": {
      "type": "string",
      "enum": [
        "landing",
        "ecommerce",
        "marketplace"
      ],
      "default": "landing"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "waitlist_url": {
      "type": "string",
      "format": "uri"
    },
    "new_release": {
      "type": "boolean",
      "default": false
    },
    "popular": {
      "type": "boolean",
      "default": false
    },
    "permission_justifications": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "permission",
          "justification"
        ],
        "properties": {
          "permission": {
            "type": "string",
            "minLength": 1
          },
          "justification": {
            "type": "string",
            "minLength": 1
          },
          "learn_more_url": {
            "type": "string",
            "format": "uri"
          }
        }
      },
      "default": []
    },
    "brand": {
      "type": "string",
      "default": "SERP Apps"
    },
    "sku": {
      "type": "string"
    },
    "pricing": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "label": {
          "type": "string"
        },
        "subheading": {
          "type": "string"
        },
        "price": {
          "type": "string"
        },
        "original_price": {
          "type": "string"
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$"
        },
        "availability": {
          "type": "string",
          "minLength": 1
        },
        "note": {
          "type": "string"
        },
        "cta_text": {
          "type": "string"
        },
        "cta_href": {
          "type": "string",
          "format": "uri"
        },
        "benefits": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        }
      }
    },
    "order_bump": {
      "description": "Deprecated. Hosted checkout ignores this field.",
      "anyOf": [
        { "type": "object" },
        { "type": "string" },
        { "type": "null" }
      ]
    },
    "return_policy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "days": {
          "type": "integer",
          "minimum": 0
        },
        "fees": {
          "type": "string"
        },
        "method": {
          "type": "string"
        },
        "policy_category": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "license": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "entitlements": {
          "anyOf": [
            {
              "type": "string",
              "minLength": 1
            },
            {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              },
              "minItems": 1
            }
          ]
        }
      }
    },
    "payment_link": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["live_url"],
          "properties": {
            "live_url": {
              "type": "string",
              "format": "uri",
              "pattern": "^https://buy\\.stripe\\.com/"
            },
            "test_url": {
              "type": "string",
              "format": "uri",
              "pattern": "^https://buy\\.stripe\\.com/"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["ghl_url"],
          "properties": {
            "ghl_url": {
              "type": "string",
              "format": "uri",
              "pattern": "^https://ghl\\.serp\\.co/"
            }
          }
        }
      ]
    },
    "stripe": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "price_id"
      ],
      "properties": {
        "price_id": {
          "type": "string",
          "minLength": 1,
          "pattern": "^price_"
        },
        "test_price_id": {
          "type": "string",
          "minLength": 1,
          "pattern": "^price_"
        },
        "mode": {
          "type": "string",
          "enum": [
            "payment",
            "subscription"
          ]
        },
        "metadata": {
          "type": ["object", "null"],
          "additionalProperties": {
            "type": "string"
          },
          "default": {}
        }
      }
    },
    "success_url": {
      "type": "string",
      "pattern": "^(https://apps\\.serp\\.co/|http://localhost)"
    },
    "cancel_url": {
      "type": "string",
      "pattern": "^(https://apps\\.serp\\.co/|http://localhost)"
    },
    "ghl": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "pipeline_id": {
          "type": "string",
          "minLength": 1
        },
        "stage_id": {
          "type": "string",
          "minLength": 1
        },
        "status": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "tag_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        },
        "workflow_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        },
        "opportunity_name_template": {
          "type": "string"
        },
        "contact_custom_field_ids": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "opportunity_custom_field_ids": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": { "status": { "const": "live" } }
      },
      "then": {
        "anyOf": [
          { "required": ["payment_link"] },
          {
            "allOf": [
              { "required": ["pricing"] },
              {
                "properties": {
                  "pricing": {
                    "required": ["cta_href"],
                    "properties": {
                      "cta_href": { "type": "string", "pattern": "^https://apps\\.serp\\.co/checkout/" }
                    }
                  }
                }
              }
            ]
          }
        ]
      }
    },
    {
      "not": {
        "allOf": [
          { "properties": { "new_release": { "const": true } } },
          { "properties": { "popular": { "const": true } } }
        ]
      }
    },
    {
      "if": { "properties": { "status": { "const": "pre_release" } } },
      "then": {
        "allOf": [
          { "not": { "properties": { "new_release": { "const": true } } } },
          { "not": { "properties": { "popular": { "const": true } } } }
        ]
      }
    },
    {
      "if": { "properties": { "new_release": { "const": true } } },
      "then": { "properties": { "status": { "const": "live" } } }
    },
    {
      "if": { "properties": { "popular": { "const": true } } },
      "then": { "properties": { "status": { "const": "live" } } }
    }
  ]
}
