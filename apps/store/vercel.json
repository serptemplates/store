{
  "installCommand": "cd ../.. && pnpm install --frozen-lockfile",
  "buildCommand": "cd ../.. && pnpm --filter @apps/store build",
  "outputDirectory": ".next",
  "crons": [
    {
      "path": "/api/cron/hourly-check",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/monitoring/health?alert=1",
      "schedule": "*/15 * * * *"
    }
  ]
}
